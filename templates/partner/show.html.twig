{% extends 'base.html.twig' %}

{% block title %}Partner{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-1">
            <a href="{{ path('partner_index') }}"><i class="fas fa-chevron-left fa-2x"></i></a>
        </div>
        <div class="col-11">
            <h1>Partner</h1>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ partner.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ partner.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ partner.address }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ vich_uploader_asset(partner, 'imageFile') }}" alt="{{ partner.picture }}" class="picture"/></td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ partner.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ partner.longitude }}</td>
            </tr>
            <tr>
                <th>Horary</th>
                <td>{{ partner.horary }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ partner.comment }}</td>
            </tr>
            <tr>
                <th>IsSpecialOffer</th>
                <td>{{ partner.isSpecialOffer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Offer</th>
                <td>{{ partner.offer }}</td>
            </tr>
            <tr>
                <th>TripAdvisorLink</th>
                <td>{{ partner.tripAdvisorLink }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ partner.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('partner_edit', {'id': partner.id}) }}" class="btn btn-outline-primary">Edit</a>

    {{ include('partner/_delete_form.html.twig') }}
{% endblock %}