{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-1">
            <a href="{{ path('location_index') }}"><i class="fas fa-chevron-left fa-2x"></i></a>
        </div>
        <div class="col-11">
            <h1>Location</h1>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ location.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-outline-primary">Edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}