{% extends 'base.html.twig' %}

{% block title %}Partner Type{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-1">
            <a href="{{ path('partner_type_index') }}"><i class="fas fa-chevron-left fa-2x"></i></a>
        </div>
        <div class="col-11">
            <h1>Partner Type</h1>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner_type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner_type.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ vich_uploader_asset(partner_type, 'imageFile') }}" alt="{{ partner_type.picture }}" class="mini-picture"/></td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ partner_type.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('partner_type_edit', {'id': partner_type.id}) }}" class="btn btn-outline-primary">Edit</a>

    {{ include('partner_type/_delete_form.html.twig') }}
{% endblock %}