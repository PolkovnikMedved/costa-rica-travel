{% extends 'base.html.twig' %}

{% block title %}Partner Request{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-1">
            <a href="{{ path('partner_request_index') }}"><i class="fas fa-chevron-left fa-2x"></i></a>
        </div>
        <div class="col-11">
            <h1>Partner Request</h1>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner_request.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ partner_request.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner_request.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ partner_request.phone }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('partner_request_edit', {'id': partner_request.id}) }}" class="btn btn-outline-primary">Edit</a>

    {{ include('partner_request/_delete_form.html.twig') }}
{% endblock %}